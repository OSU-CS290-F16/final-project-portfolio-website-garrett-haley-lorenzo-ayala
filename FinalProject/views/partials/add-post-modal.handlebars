<div class="add-post-button-container">
  <button id="add-post-button">Create Post</button>
</div>

<div id="modal-backdrop" class="hidden"></div>
<div id="add-post-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Add a Post</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="post-input-element">
        <label for="todo-input-what"> Date </label>
        <input type="text" id="post-input-what">
      </div>
      <div class="post-input-element required">
        <label for="post-input-details">Whats on your mind?</label>
        <textarea id="post-input-details"></textarea>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Add Post</button>
    </div>

  </div>
</div>
